<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#fff"
android:id="@+id/coordinatorLayout"
tools:context="mobile.com.androidfirebaseexercise.activity.Login">
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"  android:layout_weight="1"
        android:fillViewport="true" android:weightSum="1">
        <LinearLayout
            android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="match_parent" android:layout_marginTop="10dp" >
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
            <!--UI Field Location-->
            <LinearLayout android:layout_width="match_parent"  android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"  android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/LinearLayoutEmail">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="#222"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TextInputEditText
                        android:minLines="1"
                        android:maxLines="1"
                        android:id="@+id/EditTextEmail"
                        android:layout_height="match_parent"  android:layout_weight="1" android:layout_width="match_parent" android:textColorHint="#222"
                        android:paddingLeft="10dp"  android:hint="Email" android:inputType="text" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"  android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"  android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/LinearLayoutPassword">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="#222"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent">
                    <android.support.design.widget.TextInputEditText
                        android:minLines="1"
                        android:maxLines="1"
                        android:id="@+id/EditTextPassword"
                        android:layout_height="match_parent"  android:layout_weight="1" android:layout_width="match_parent" android:textColorHint="#222"
                        android:paddingLeft="10dp"  android:hint="Password" android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:padding="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegister"
                    style="?android:attr/button"
                    android:layout_width="0dip"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:shadowColor="#FFFFFF"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="#FFFFFF"
                    android:text="Register">
                </Button>

                <Button
                    android:id="@+id/btnLogin"
                    style="?android:attr/button"
                    android:layout_width="0dip"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:shadowColor="#FFFFFF"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:text="Login">
                </Button>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
</android.support.design.widget.CoordinatorLayout>