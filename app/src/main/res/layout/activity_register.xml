<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#fff"
android:id="@+id/coordinatorLayout"
tools:context="mobile.com.androidfirebaseexercise.activity.Register">
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"  android:layout_weight="1"
            android:fillViewport="true" android:weightSum="1">
                <LinearLayout
                    android:orientation="vertical" android:layout_width="fill_parent"
                    android:layout_height="match_parent" android:layout_marginTop="10dp" >
                    <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>
                    <!--UI Field Location-->
                    <LinearLayout android:layout_width="match_parent"  android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"  android:layout_height="60dp"
                        android:orientation="vertical"
                        android:id="@+id/LinearLayoutName">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:textColorHint="#222"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputEditText
                                android:minLines="1"
                                android:maxLines="1"
                                android:id="@+id/EditTextName"
                                android:layout_height="match_parent"  android:layout_weight="1" android:layout_width="match_parent" android:textColorHint="#222"
                                android:paddingLeft="10dp"  android:hint="Name" android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"  android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"  android:layout_height="60dp"
                        android:orientation="vertical"
                        android:id="@+id/LinearLayoutEmail">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:textColorHint="#222"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputEditText
                                android:minLines="1"
                                android:maxLines="1"
                                android:id="@+id/EditTextEmail"
                                android:layout_height="match_parent"  android:layout_weight="1" android:layout_width="match_parent" android:textColorHint="#222"
                                android:paddingLeft="10dp"  android:hint="Email" android:inputType="text" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"  android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"  android:layout_height="60dp"
                        android:orientation="vertical"
                        android:id="@+id/LinearLayoutPassword">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:textColorHint="#222"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputEditText
                                android:minLines="1"
                                android:maxLines="1"
                                android:id="@+id/EditTextPassword"
                                android:layout_height="match_parent"  android:layout_weight="1" android:layout_width="match_parent" android:textColorHint="#222"
                                android:paddingLeft="10dp"  android:hint="Password" android:inputType="textPassword" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"  android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"  android:layout_height="60dp"
                        android:orientation="vertical"
                        android:id="@+id/LinearLayoutPhoneNumber">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:textColorHint="#222"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputEditText
                                android:minLines="1"
                                android:maxLines="1"
                                android:id="@+id/EditTextPhoneNumber"
                                android:layout_height="match_parent"  android:layout_weight="1" android:layout_width="match_parent" android:textColorHint="#222"
                                android:paddingLeft="10dp"  android:hint="Phone Number" android:inputType="numberDecimal" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"  android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"  android:layout_height="60dp"
                        android:orientation="vertical"
                        android:id="@+id/LinearLayoutUserKeyID">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:textColorHint="#222"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_height="match_parent">
                            <android.support.design.widget.TextInputEditText
                                android:minLines="1"
                                android:maxLines="1"
                                android:id="@+id/EditTextUserKeyID"
                                android:layout_height="match_parent"  android:layout_weight="1" android:layout_width="match_parent" android:textColorHint="#222"
                                android:paddingLeft="10dp"  android:hint="ID Number" android:inputType="numberDecimal" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/LinearLayoutCities" android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_marginBottom="60dp" android:layout_height="wrap_content"  android:shadowRadius="5"
                        android:orientation="vertical" android:layout_marginRight="16dp"  android:layout_marginLeft="10dp">
                        <TextView   android:layout_width="match_parent" android:id="@+id/MasterPaymentLayout"
                            android:text="City" android:textColor="#222"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/SpinnerCities"
                            android:paddingTop="0dp"
                            android:layout_height="60dp"
                            android:layout_width="match_parent"/>
                    </LinearLayout>



                </LinearLayout>
            </ScrollView>
    <LinearLayout
        android:id="@+id/linearLayoutButtonSubmit"
        android:layout_width="fill_parent"
        android:padding="0dp"
        android:visibility="visible"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="bottom|center">
        <Button android:id="@+id/btnSubmit" style="?android:attr/button" android:backgroundTint="@color/colorPrimary" android:layout_width="match_parent" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
            android:layout_height="60dp" android:text="Submit" android:textColor="#fff">
        </Button>
        </LinearLayout>

        </LinearLayout>
</android.support.design.widget.CoordinatorLayout>